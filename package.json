{
	"name": "gcode-delectron",
	"displayName": "G-CODE D.Electron",
	"description": "G-CODE Language for CNC",
	"author": "Pitamorsi Francesco",
	"license": "MIT",
	"version": "1.1.0",
	"icon": "./icon/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Pitax/GCODE_D.Electron"
	},
	"publisher": "Pitamorsi",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.49.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "GCODE CNC",
			"properties": {
				"languageServergcode.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServergcode.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "gcode",
				"aliases": [
					"GCODE",
					"g-code"
				],
				"extensions": [
					"."
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "gcode",
				"scopeName": "source.gcode",
				"path": "./syntaxes/gcode.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "gcode",
				"path": "./snippets/snippets.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2"
	}
}
